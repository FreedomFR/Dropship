                    <label for="alt" class="form-label">Alt</label>
                    <input type="text" class="form-control" name="alt[]" id="alt" aria-describedby="alt">
                </div>


                <div class="mt-5 d-flex justify-content-center">
                    <button class="btn btn-success col-5" type="submit">Valider</button>
