{% extends 'partials/_base_back.html.twig' %}
{% block title %}Backoffice{% endblock %}
{% block body %}
    {% include "page/admin-navbar.html.twig" %}
    <div class="admin-main-wrapper row p-3">
        {% include "admin/vertical-navbar.html.twig" %}
        <div class="col-10">
{#        <a class="btn tendance-mini-card ms-auto col-3 shadow-sm" href="{{ path('admin_articles_list') }}"><i class="fa-solid fa-arrow-left-long me-2"></i>Retour</a>#}
        <div class="row d-flex justify-content-center">
            <h3 class="border-bottom pb-2 mb-5">Nouveau article</h3>
            <form class="row" id="form" method="post" action="{{ path('admin_article_form_save') }}">
                <input type="hidden" name="id" id="id" value="{{ article.id }}">
                <div class="mb-3 col-6">
                    <label for="nom" class="form-label">Nom</label>
                    <input type="text" class="form-control" name="nom" id="nom" aria-describedby="nom" value="{{ article.nom }}">
                </div>
                <div class="mb-3 col-12">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="description" id="description" rows="10">{{ article.description }}</textarea>
                </div>

                <div class="row">
                    <div class="mb-3 col-6">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="isPack" name="isPack" />
                            <label class="form-check-label" for="isPack">Pack</label>
                        </div>
                    </div>
                </div>

                {# TODO              #}
                {#
                    Faire deux façon d'ajouter des prix en fonction de isPack, si non pack, le prix est écrit dans article sinon l'écrire dans une autre table, avec
                    description + prix lier à l'article
                #}
                <div class="row">
                    <div class="mb-3 col-6">
                        <label for="prix" class="form-label">Prix</label>
                        <input type="number" class="form-control" name="nom" id="prix" aria-describedby="prix" value="{{ article.prix }}">
                    </div>
                </div>

                <div class="mt-5 d-flex justify-content-center">
                    <button class="btn btn-success col-5" type="submit">Valider</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
