{% extends "partials/_base_front.html.twig" %}
{% block body %}

    {% include "page/navbar.html.twig" %}
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-12 col-lg-3 mb-3 mb-lg-0">
                        <a href="{{ path('product_show', { 'id' : article.id }) }}" class="text-muted">
                            <div class="card">
                                {% if article.images and article.images[0] is defined %}
                                    <img src="{{ asset('assets/images/' ~ article.images[0].file) }}"
                                         class="card-img-top" alt="{{ article.images[0].alt }}" />
                                {% else %}
                                    <img src="{{ asset('assets/images/noImg.webp') }}"
                                         class="card-img-top" alt="no Image" />
                                {% endif %}

                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="mb-0 col-9">{{ article.nom }}</h5>
                                        <p class="small text-danger"><s>{{ article.prix|number_format(2, ',', ',') }} €</s></p>
                                    </div>

                                    <div class="d-flex justify-content-between mb-3">
                                        <h5 class="text-dark mb-0"></h5>
                                        <h5 class="text-dark mb-0">{{ (article.prix/2)|number_format(2, ',', ',') }} €</h5>
                                    </div>

                                    <div class="d-flex justify-content-between mb-2">
                                        <p class="text-muted mb-0">Restant : <span class="fw-bold">6</span></p>
                                        <div class="ms-auto text-warning">
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}
{% block javascripts %}
    <script type="text/javascript">

    </script>
{% endblock %}