{% extends "partials/_base_back.html.twig" %}
{% block title %}Connexion{% endblock %}
{% block body %}
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5 rounded shadow">
              <div class="brand-logo d-flex">
                {# <img class="mx-auto" src="" alt="logo"> #}
              </div>
              <h6 class="fw-light text-center">Connectez vous pour continuer.</h6>
              <form class="pt-3" action="{{ path('login') }}" method="POST">
                {% if error %}
                  <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                  <input type="email" class="form-control" name="_username" id="exampleInputEmail1" placeholder="E-mail"  value="{{ last_username }}" required>
                </div>
                <div class="form-group">
                  <input type="password" class="form-control" id="exampleInputPassword1" name="_password" placeholder="Mot de passe" required>
                </div>
                <div class="mt-3 d-flex">
                  <button class="btn btn-sm btn-success text-white mx-auto btn-lg font-weight-medium auth-form-btn" type="submit">
                    Connexion</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
{#                  <div class="form-check">#}
{#                    <label class="form-check-label text-muted">#}
{#                      <input type="checkbox" class="form-check-input">#}
{#                      Rester connecté#}
{#                    </label>#}
{#                  </div>#}
                 {# <a href="{{ path('forgot_password') }}" class="auth-link text-black">Mot de passe oublié?</a> #}
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" name="_target_path" value="{{ path('admin_index') }}"/>
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
                #}
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
{% endblock %}
{% block javascripts %}{% endblock %}